<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/physicsWallah_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Class 11"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Physics11PW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="10dp"
                        android:text="Physics"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/Chemistry11PW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:text="Chemistry"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Physics11_PacePW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="10dp"
                        android:text="Physics (Pace)"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/Chemistry11_PacePW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:text="Chemistry (Pace)"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Maths11_PacePW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:text="Maths (Pace)"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </TableRow>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Class 12"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Physics12PW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="10dp"
                        android:text="Physics"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/Chemistry12PW"
                        style="@style/Base.CardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:text="Chemistry"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/cant_find_video"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/physicsWallah_playlist_search"
                style="@style/Base.CardView"
                android:text="Search Channel Playlist"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PhysicsWallah links:-"
                android:layout_margin="5dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:text = "Youtube:-"/>
            <TextView
                android:id="@+id/PhysicsWallah_Youtube"
                android:layout_width="0dp"
                android:layout_weight="75"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:text="https://www.youtube.com/channel/ "
                android:textColor="@color/link_color"
                android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:text = "Website:-"/>
                <TextView
                    android:id="@+id/PhysicsWallah_Website"
                    android:layout_width="0dp"
                    android:layout_weight="75"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:text="https://www.physicswallahalakhpandey"
                    android:textColor="@color/link_color"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:text = "Website:-"/>
                <TextView
                    android:id="@+id/PhysicsWallah_Website2"
                    android:layout_width="0dp"
                    android:layout_weight="75"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:text="https://www.physicswallaha.live"
                    android:textColor="@color/link_color"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="20"
                    android:text="App :-"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/PhysicsWallah_App"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:layout_weight="80"
                    android:text="https://www.play.google.com"
                    android:textColor="@color/link_color"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

